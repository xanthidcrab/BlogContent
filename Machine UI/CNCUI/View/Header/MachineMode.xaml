<UserControl x:Class="CNCUI.View.MachineMode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CNCUI.View"
             xmlns:vm="clr-namespace:CNCUI.ViewModel.Header"
             mc:Ignorable="d" 
             Height="110" Width="590">
    <UserControl.DataContext>
        <vm:MachineModeViewModel/>
   
    </UserControl.DataContext>
    <Border BorderThickness="3" BorderBrush="Black" CornerRadius="15">

        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Width="auto" Height="auto">
            <TextBlock Text="{Binding MachineModeModel.TextProperty}"
                   FontSize="50" 
                   FontWeight="Bold"/>
        </Grid>
    </Border>
</UserControl>
